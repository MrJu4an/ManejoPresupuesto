@model Categoria
@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container">
    <h1>Crear categoría</h1>
    <h5>
        La categoría nos permite indicar en que gastamos nuestro dinero,
        también, de donde provienen nuestros ingresos.
    </h5>
    <form asp-action="Crear">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3"> 
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TipoOperacionId" class="form-label"></label>
            <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacionId>()" class="form-select"></select>
            <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
