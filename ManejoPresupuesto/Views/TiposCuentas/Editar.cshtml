@model TipoCuenta
@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}
<div class="container">
    <h1>Editar Tipo Cuenta: @Model.Nombre</h1>
    <div asp-validation-summary ="ModelOnly" class="text-danger mb-3"></div>
    <form asp-controller="TiposCuentas" asp-action="Editar">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
    </form>
</div>