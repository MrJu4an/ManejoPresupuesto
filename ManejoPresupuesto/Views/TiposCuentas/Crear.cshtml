@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}
<div class="container">
    <h1>Crear Tipo de Cuenta</h1>
    <h5>
        El Tipo de cuenta se refiere a como podemos agrupar cuentas.
        Ejemplos: Prestamos, tarjetas de crédito, etc.
    </h5>
    <div asp-validation-summary ="ModelOnly" class="text-danger mb-3"></div>
    <form asp-controller="TiposCuentas" asp-action="Crear">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}